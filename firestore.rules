rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are open and allow anyone to read and write to your database.
    // This is for prototyping purposes only.
    // You should secure your database before deploying to production.
    match /projects/{projectId}/milestones/{milestoneId} {
      allow read, write: if true;
    }
  }
}
